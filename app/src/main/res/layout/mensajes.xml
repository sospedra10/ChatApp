<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    cardview:cardCornerRadius="10sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoPerfilMensaje"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/no_contact"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombreMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kevin"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/horaMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"/>

            </LinearLayout>



            <TextView
                android:visibility="gone"
                android:id="@+id/mensajeMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"/>

            <ImageView
                android:id="@+id/fotoMensaje"
                android:layout_width="@dimen/photo_in_message_dim"
                android:layout_height="@dimen/photo_in_message_dim"
                android:visibility="gone"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>